<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SecondActivity">

    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:text="@string/question_from_secodActiv"
        android:textAllCaps="false"
        android:textSize="@dimen/question_text_view"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:paddingLeft="8dp"
        android:text="@string/chosen_recomendation"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/button"
                android:layout_width="300dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#c266ff"
                android:text="Стать эффективнее"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="300dp"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="#ad33ff"
                android:text="Снять стресс"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="300dp"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="#9900ff"
                android:text="Улучшить сон"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="300dp"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="#7a00cc"
                android:text="Почувствовать себя счастливее"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="300dp"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="#5c0099"
                android:text="Повысить самооценку"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>